#!/bin/sh

# Husky v9+ does not require sourcing _/husky.sh; removing deprecated header.

# Pre-commit hook to prevent common code quality issues
echo "ğŸ” Running pre-commit checks..."

# Run type check
echo "âš™ï¸  TypeScript type checking..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors detected. Please fix before committing."
  exit 1
fi

# Run ESLint
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint errors detected. Please fix before committing."
  exit 1
fi

# Run markdownlint on staged .md files (auto-fix, re-stage, then verify)
STAGED_MD=$(git diff --cached --name-only --diff-filter=ACM | grep '\.md$' || true)
if [ -n "$STAGED_MD" ]; then
  echo "ğŸ“ Checking markdown files..."
  # Auto-fix what we can and re-stage
  echo "$STAGED_MD" | xargs npx markdownlint-cli2 --fix 2>/dev/null || true
  echo "$STAGED_MD" | xargs git add 2>/dev/null || true
  # Verify no errors remain
  if ! echo "$STAGED_MD" | xargs npx markdownlint-cli2 2>/dev/null; then
    echo "âŒ Markdown lint errors detected. Please fix before committing."
    exit 1
  fi
fi

echo "âœ… All checks passed!"
exit 0
