// This is your Prisma schema file,
// learn more about it in the docs: https://pris.lyd/prisma-schema

// 1. Define the database provider and URL
datasource db {
  provider = "postgresql"
}

// 2. Define the generator for Prisma Client (TypeScript)
generator client {
  provider = "prisma-client-js"
}

// --- Product & Related Models ---

// This is the main Product table
model Product {
  id            String  @id @default(cuid())
  name          String
  slug          String  @unique // For clean URLs like /products/hayes-valley-espresso
  description   String? @db.Text // Can store long text/HTML/Markdown
  
  origin        String[] // e.g., "Ethiopia", "Colombia", "Blend"
  tastingNotes  String[] // PostgreSQL arrays are great for this
  roastLevel    RoastLevel @default(MEDIUM)
  isOrganic     Boolean @default(false)


  // --- FIELDS FOR HOMEPAGE ---
  isFeatured    Boolean @default(false)
  featuredOrder Int?    // Optional integer to control sort order

  // --- Relations ---
  images        ProductImage[] // A product can have many images
  variants      ProductVariant[] // A product can have many variants (e.g., 12oz, 5lb)
  
  // UPDATED: This is now a many-to-many relation
  categories    CategoriesOnProducts[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([isFeatured])
}

// NEW: This is the explicit join table for Many-to-Many
model CategoriesOnProducts {
  product     Product   @relation(fields: [productId], references: [id])
  productId   String
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  isPrimary   Boolean   @default(false) // Use this to define the "main" category for breadcrumbs

  @@id([productId, categoryId]) // Composite primary key
}

// NEW: Category table, now linked via the join table
model Category {
  id                   String       @id @default(cuid())
  name                 String
  slug                 String       @unique
  labelSettingId       String       // References SiteSettings for the label value
  labelSetting         SiteSettings @relation("CategoryLabel", fields: [labelSettingId], references: [id], onDelete: Restrict)
  isUsingDefaultLabel  Boolean      @default(true) // Track if using default or explicitly set
  order                Int          @default(0) // Display order in navigation menu
  showPurchaseOptions  Boolean      @default(true) // Show price/buy button on category page
  products             CategoriesOnProducts[] // Relation back to the join table
  
  @@index([labelSettingId])
}


// This table holds all images for a product
model ProductImage {
  id        String @id @default(cuid())
  url       String // The URL to the image (e.g., in an S3 bucket or Cloudinary)
  altText   String // Important for accessibility (a11y)
  order     Int    @default(0) // To control the order of images in a gallery

  // Relation back to the Product
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

// This table holds product variants (e.g., "12oz Bag")
model ProductVariant {
  id            String @id @default(cuid())
  name          String // e.g., "12oz Bag", "5lb Bag"
  weightInGrams Int    // e.g., 340
  stockQuantity Int @default(0) 

  // Relation back to the Product
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Relation to purchase options
  purchaseOptions PurchaseOption[] 

  @@index([productId])
}

// This table holds the different ways to buy a variant
model PurchaseOption {
  id              String @id @default(cuid())
  type            PurchaseType @default(ONE_TIME)
  priceInCents    Int    

  // Stripe-style recurring config for subscriptions
  billingInterval      BillingInterval? // DAY, WEEK, MONTH, YEAR
  billingIntervalCount Int?             // e.g. 1, 2, 3, 4

  // Relation back to the Variant
  variantId String
  variant   ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
  @@index([variantId])
}

enum PurchaseType {
  ONE_TIME
  SUBSCRIPTION
}

enum BillingInterval {
  DAY
  WEEK
  MONTH
  YEAR
}

// --- Settings ---

model SiteSettings {
  id                      String     @id @default(cuid())
  key                     String     @unique // e.g., "defaultCategoryLabel"
  value                   String     // e.g., "Collections"
  updatedAt               DateTime   @updatedAt
  
  // Categories using this setting as their label
  categoriesAsLabel       Category[] @relation("CategoryLabel")
}

// --- User & Order Models ---
// (User, Account, Session, VerificationToken, Address, Order, OrderItem models
// remain exactly the same as the previous file)
// ...
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   
  passwordHash  String?
  isAdmin       Boolean   @default(false) // Admin access for order fulfillment
  
  accounts      Account[] 
  sessions      Session[] 
  addresses     Address[] 
  orders        Order[]
  subscriptions Subscription[]
  activities    UserActivity[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Address {
  id          String  @id @default(cuid())
  street      String
  city        String
  state       String
  postalCode  String
  country     String
  isDefault   Boolean @default(false)

  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Order {
  id               String      @id @default(cuid())
  totalInCents     Int
  status           OrderStatus @default(PENDING)
  deliveryMethod   DeliveryMethod @default(DELIVERY)

  // Stripe fields
  stripeSessionId       String? // Stripe Checkout Session ID (removed @unique to allow split orders from same session)
  stripePaymentIntentId String? // Stripe Payment Intent ID
  stripeCustomerId      String? // Stripe Customer ID
  stripeSubscriptionId  String? @unique // Stripe Subscription ID (for subscription orders only)
  customerEmail         String? // Email from checkout
  paymentCardLast4      String? // Last 4 digits of payment card

  // Shipping fields for all orders
  // For DELIVERY orders: populated from checkout form or saved address
  // For PICKUP orders: can be left null/empty since customer collects in-store
  recipientName       String? // Recipient name for shipping
  shippingStreet      String? // Street address
  shippingCity        String? // City
  shippingState       String? // State/Province
  shippingPostalCode  String? // Postal/ZIP code
  shippingCountry     String? // Country

  // Fulfillment tracking
  trackingNumber String? // Shipping tracking number
  carrier        String? // Shipping carrier (USPS, FedEx, UPS, etc.)
  shippedAt      DateTime? // When order was shipped

  userId       String?
  user         User?        @relation(fields: [userId], references: [id], onDelete: Restrict)
  items        OrderItem[]
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([userId])
  @@index([stripeSessionId])
  @@index([stripeSubscriptionId])
  @@index([customerEmail])
}

model OrderItem {
  id            String @id @default(cuid())
  quantity      Int
  priceInCents  Int 
  orderId       String
  order         Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  purchaseOptionId String
  purchaseOption   PurchaseOption @relation(fields: [purchaseOptionId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([purchaseOptionId])
}

model Subscription {
  id                    String             @id @default(cuid())
  stripeSubscriptionId  String             @unique // Stripe Subscription ID
  stripeCustomerId      String             // Stripe Customer ID
  status                SubscriptionStatus @default(ACTIVE)
  
  // Product details (can contain multiple products if subscription has multiple line items)
  // üèóÔ∏è ARCHITECTURAL DECISION: Snapshot approach vs. relational
  // We store product names as strings instead of linking to Product/Variant/PurchaseOption models.
  // WHY? 
  // 1. Historical accuracy: If product is renamed/deleted, subscription shows original name
  // 2. Fulfillment simplicity: Merchant only needs the name to ship the right product
  // 3. UI simplicity: No complex joins needed to display subscription details
  // TRADEOFF:
  // - When creating recurring orders, we must lookup PurchaseOption by name (fuzzy match)
  // - Risk: If product name changes significantly, recurring orders may fail to find match
  // - Mitigation: Keep product names stable, or add purchaseOptionIds[] for direct lookup
  productNames          String[]           // Array of product names (e.g., ["Ethiopian Yirgacheffe - 12oz", "Death Valley Espresso - 2lb"])
  stripeProductIds      String[]           // Array of Stripe Product IDs for all items in subscription
  stripePriceIds        String[]           // Array of Stripe Price IDs for all items in subscription
  productDescription    String?            // Full product description (from first Stripe product)
  quantities            Int[]              // Array of quantities for each product (matches order of productNames)
  priceInCents          Int                // Total price per billing cycle (sum of all items)
  deliverySchedule      String?            // e.g., "Every 2 weeks", "Monthly"
  
  // Billing cycle
  currentPeriodStart    DateTime
  currentPeriodEnd      DateTime
  cancelAtPeriodEnd     Boolean            @default(false)
  canceledAt            DateTime?
  
  // Shipping address
  recipientName         String?
  shippingStreet        String?
  shippingCity          String?
  shippingState         String?
  shippingPostalCode    String?
  shippingCountry       String?
  
  userId                String
  user                  User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  @@index([userId])
  @@index([stripeSubscriptionId])
  @@index([stripeCustomerId])
}

// --- User Activity Tracking ---

model UserActivity {
  id           String       @id @default(cuid())
  sessionId    String       // Session identifier for anonymous and authenticated users
  userId       String?      // Null for anonymous users
  activityType ActivityType
  
  // Product context
  productId    String?
  productSlug  String?
  categorySlug String?
  
  // Search context
  searchQuery  String?
  
  // Additional metadata
  source       String?      // "homepage", "category-page", "product-page", "search-results"
  metadata     Json?        // Flexible field for future expansion
  
  createdAt    DateTime     @default(now())
  
  user         User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionId])
  @@index([productId])
  @@index([activityType, createdAt])
}

// --- Enums ---

enum ActivityType {
  PAGE_VIEW
  PRODUCT_VIEW
  SEARCH
  ADD_TO_CART
  REMOVE_FROM_CART
}

enum OrderStatus {
  PENDING
  SHIPPED
  PICKED_UP
  CANCELLED
  FAILED
}

enum DeliveryMethod {
  DELIVERY
  PICKUP
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELED
  PAST_DUE
}

enum RoastLevel {
  LIGHT
  MEDIUM
  DARK
}